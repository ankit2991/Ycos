<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.CartDetails">

    <include layout="@layout/header_back" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/tv_car_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/btn_bordercolor"
                android:textSize="@dimen/_10sdp"
                android:drawableRight="@drawable/ic_down"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center|left"
                android:hint="Car Type"
                android:paddingStart="@dimen/_20sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:background="@drawable/btn_bordercolor"
                android:drawableRight="@drawable/ic_down"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center|left"
                android:hint="Car Model"
                android:paddingStart="@dimen/_20sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/btn_bordercolor"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_10sdp"
                android:hint="Vehicle Registration Number"
                android:paddingStart="@dimen/_20sdp"
                android:textColorHint="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DateFormat"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/btn_bordercolor"
                android:drawableRight="@drawable/ic_calendar"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center|left"
                android:hint="Select Date "
                android:paddingStart="@dimen/_20sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textColorHint="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TimeFormat"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/btn_bordercolor"
                android:drawableRight="@drawable/ic_clock1"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center|left"
                android:hint="Select Time"
                android:textSize="@dimen/_10sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textColorHint="@color/black"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Add Car Images"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_image" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:src="@drawable/ic_image" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_7sdp"

                    android:src="@drawable/ic_image" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_7sdp"

                    android:src="@drawable/ic_image" />

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/btn_bordercolor"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center|left"
                android:hint="Remarks"
                android:textSize="@dimen/_10sdp"
                android:paddingStart="@dimen/_20sdp"
                android:textColorHint="@color/black"
                android:textStyle="bold" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cartDetails_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/poppins_semibold"
        android:text="Pay"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp" />


</LinearLayout>